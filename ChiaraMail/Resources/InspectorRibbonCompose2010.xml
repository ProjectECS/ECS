<?xml version="1.0" encoding="utf-8" ?>
<customUI onLoad="RibbonLoad" xmlns="http://schemas.microsoft.com/office/2009/07/customui">
  <ribbon>
    <tabs>
      <tab idMso="TabNewMailMessage">
        <group id="groupChiaraMail"  getLabel="GetLabel">
          <labelControl id="labelSpaceAvailable" getLabel="GetLabel" />
          <toggleButton id="toggleDynamic" getLabel="GetLabel" size="normal"
             onAction="OnPress" getPressed="GetPressed" getImage="GetImage"
              getScreentip="GetScreentip" getDescription="GetDescription"
              getEnabled="GetEnabled"/>
          <toggleButton id="toggleEncrypted" imageMso="FileDocumentEncrypt"
             onAction="OnPress" getPressed="GetPressed" getLabel="GetLabel"
             size="normal" getScreentip="GetScreentip" getDescription="GetDescription"
             getEnabled="GetEnabled"/>
          <button id="spaceAvailable" getLabel="GetLabel" getScreentip="GetScreentip" size="large" getImage="GetImage" />
          <toggleButton id="toggleNoPlaceholder" imageMso="ColumnsDialog"
              onAction="OnPress" getPressed="GetPressed" getLabel="GetLabel"
              size="normal" getScreentip="GetScreentip" getDescription="GetDescription"
              getEnabled="GetEnabled"/>
          <toggleButton id="toggleAllowForwarding" getLabel="GetLabel" size="normal"
             onAction="OnPress" getPressed="GetPressed" getImage="GetImage"
              getScreentip="GetScreentip" getDescription="GetDescription"
              getEnabled="GetEnabled"/>
        </group>
      </tab>
    </tabs>
  </ribbon>
  <backstage>
    <tab idMso="TabHelp">
      <firstColumn>
        <taskGroup idMso="GroupContactMicrosoft">
          <category id="groupChiaraMailHelp" getLabel="GetLabel">
            <task id="taskChiaraMailHelp" getLabel="GetLabel"  getDescription="GetDescription"
                    getImage="GetImage" onAction="OnClick"  isDefinitive="false" />
          </category>
        </taskGroup>
      </firstColumn>
    </tab>
  </backstage>
</customUI>